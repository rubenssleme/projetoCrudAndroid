<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bg.com.br.navigationdrawerbg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controladores.ControladorTelaSplash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controladores.ControladorTelaPrincipal"
            android:label="Nome do aplicativo ou tela"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controladores.ControladorTelaInserir"
            android:label="Tela de Inserir dados" />
        <activity
            android:name=".controladores.ControladorTelaConsultar"
            android:label="Tela de Consulta" />
        <activity android:name=".controladores.ControladorTelaOperacoes"></activity>
    </application>

</manifest>